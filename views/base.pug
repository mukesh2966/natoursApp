//- pug also understands the normal html content
doctype html
html
    head
        block head
            meta(charset="UTF-8")
            meta(name='viewport' content='width=device-width, initial-scale=1.0')


            //- express.static() sets the public folder as the home folder for these resources, and we fetch them by http request for them
            //-each resource has its own http request 
            link(rel='stylesheet' href='/css/style.css')
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            script(src='https://js.stripe.com/v3/')
            script(src='https://api.mapbox.com/mapbox-gl-js/v1.11.1/mapbox-gl.js')
            link(href='https://api.mapbox.com/mapbox-gl-js/v1.11.1/mapbox-gl.css' rel='stylesheet')
            title Natours | #{title}

    body
        // HEADER
        include _header


        // CONTENT
        //- main.main
        //-    h1= tour
        block content
            h1 This is a placeholder heading

        // FOOTER
        include _footer

